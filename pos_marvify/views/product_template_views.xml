<odoo>
    <record id="view_product_template_form_marvify" model="ir.ui.view">
        <field name="name">product.template.form.marvify</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='pos']/*[last()]" position="after">
                <group>
                    <field name="marvify_model_id" placeholder="Enter Marvify Model ID"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>

